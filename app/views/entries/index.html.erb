<%= form_for(entries_path, method: :get) do |form| %>
  <p><%= form.label("Search") %></p>
  <p><%= form.text_field("search") %></p>
  <p><%= form.submit("Search", class: "btn btn-primary") %></p>
<% end %>
<% for entry in @entries %>
<h2><%= link_to(entry.title, entry_path(entry)) %></h2>
  <p><%= entry.date %></p>
  <p><%= entry.contents %></p>
<% end %>

<p><%= link_to("New entry", new_entry_path, class: 'btn btn-primary') %></p>

<% if @search_params.present? %>
<p><%= link_to("All entries", entries_path, class: 'btn btn-primary') %></p>
<%end%>
